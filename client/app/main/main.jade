          img/(src="#{ val }" large-img="#{ lrgImgAttr }" class="margin-bottom-lg")
        aside.col-md-3.col-md-offset-9
          h3 #{ title }
          p #{ media }

       
  .article-panel
    .container
      .row
        .col-md-6.col-md-offset-2.margin-bottom-lg
          h2.title-indent 
            span &ldquo;
            | #{ title }
            span &rdquo;
          p.client <span>Client:</span> #{ client }
            block
        div(class=" section-#{ colorStrip } ")









