script.
  $( document ).ready(function() {
    
    //view larger images
    $( "img" ).on({'click': function(){
      //grab the src
      var myUrl = $(this).attr('src');
      //grab the large image file name
      var urlSnippet = $(this).attr('large-img');
      //split the url
      var myArray = myUrl.split( '/' );
      //delete the last item: the file name
      myArray.pop();
      //add the new file name
      myArray.push(urlSnippet);
      //join it all back up
      var newUrl = myArray.join('/');    
      
      $(this).attr("src",newUrl).addClass('large');
    }});
  });